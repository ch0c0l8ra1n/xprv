{
  "name": "xprv",
  "version": "1.0.1",
  "description": "Type-safe Express.js framework with automatic OpenAPI generation and client SDK",
  "license": "MIT",
  "author": "rajatparajuli5@gmail.com",
  "keywords": [
    "typescript",
    "express",
    "type-safe",
    "openapi",
    "api",
    "rest",
    "zod",
    "validation",
    "framework",
    "type-safety"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ch0c0l8ra1n/xprv.git"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "dist-scripts/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepack": "npm run build && npm run build:scripts",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.scripts.json",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/core/normal/temp.ts",
    "demo:server": "tsx --watch src/demo/server.ts",
    "demo:client": "tsx --watch src/demo/client.ts",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "gen:openapi": "tsx scripts/xprv-gen-openapi/index.ts"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "fetch-cookie": "^3.1.0",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.9.1",
    "tough-cookie": "^6.0.0",
    "ts-json-schema-generator": "^2.4.0",
    "ts-morph": "^27.0.0"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.5"
  },
  "bin": {
    "xprv-extract-type": "./dist-scripts/xprv-extract-type/index.js",
    "xprv-gen-openapi": "./dist-scripts/xprv-gen-openapi/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js"
    }
  }
}
